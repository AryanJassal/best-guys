{
  "autorun": true,
  "autokill": true,
  "terminals": [
    {
      "name": "Live Reload",
      "description": "For django livereload",
      "open": true,
      "focus": true,
      "commands": [
        "python manage.py livereload"
      ]
    },
    {
      "name": "Server",
      "description": "Django server",
      "open": true,
      "focus": false,
      "commands": [
        "python manage.py runserver 0.0.0.0:8000"
      ]
    },
    {
      "name": "Sass",
      "description": "For watching and compiling sass files",
      "open": true,
      "focus": false,
      "commands": [
        "sass --watch --no-source-map static/base/styles/base.scss:static/base/styles/base.css static/store/styles/store.scss:static/store/styles/store.css static/core/styles/core.scss:static/core/styles/core.css"
      ]
    }
  ]
}